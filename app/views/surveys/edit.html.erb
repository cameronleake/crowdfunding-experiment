						</tr>
				 		<tr>
							<td><h4><%= Q7_A_TEXT %></h4></td>
							<td><%= f.input :q7_a, label: false, as: :select, :collection => SURVEY_RISK_SELECTION, :include_blank => true, :selected => nil %></td>
						</tr>  				
				 		<tr>
							<td><h4><%= Q7_B_TEXT %></h4></td>
							<td><%= f.input :q7_b, label: false, as: :select, :collection => SURVEY_RISK_SELECTION, :include_blank => true, :selected => nil %></td>
						</tr>
				 		<tr>
							<td><h4><%= Q8_TEXT %></h4></td>
							<td><%= f.input :q8, label: false, as: :select, :include_blank => true, :selected => nil %></td>
						</tr>
				 		<tr>
							<td><h4><%= Q9_TEXT %></h4></td>
							<td><%= f.input :q9, label: false, as: :text, :input_html => { :class => 'survey-text-field' } %></td>
						</tr>
				 		<tr>
							<td><h4><%= Q10_TEXT %></h4></td>
							<td><%= f.input :q10, label: false, as: :text, :input_html => { :class => 'survey-text-field' } %></td>
						</tr> 
						
						<% if @user.user_type == "Creator" %>  
						
					 		<tr>
								<td><h4><%= Q11_TEXT %></h4></td>
								<td><%= f.input :q11, label: false, as: :select, :collection => SURVEY_RISK_SELECTION, :include_blank => true, :selected => nil %></td>
							</tr>
					 		<tr>
								<td colspan="2">
									<h4><%= Q12_TEXT_1 %> --- <%= Q12_TEXT_2 %></h4>
								</td>
							</tr>
					 		<tr>
								<td><h4><%= Q12_A_TEXT %></h4></td>
