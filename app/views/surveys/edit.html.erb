					<tbody>
				 		<tr>
							<td class="span7"><h4><%= Q1_TEXT %></h4></td>
							<td class="span5"><%= f.input :q1, label: false, as: :select, collection: 15..80, :include_blank => true, :selected => nil %></td>
						</tr>
				 		<tr>
							<td><h4><%= Q2_TEXT %></h4></td>
							<td><%= f.input :q2, label: false, as: :select, :collection => ["Male", "Female"], :include_blank => true, :selected => nil %></td>
						</tr>
				 		<tr>
							<td><h4><%= Q3_TEXT %></h4></td>
							<td><%= f.input :q3, label: false, as: :select, :include_blank => true, :selected => nil %></td>
						</tr>	 
				 		<tr>
							<td><h4><%= Q4_TEXT %></h4></td>
							<td><%= f.input :q4, label: false, as: :select, :collection => SURVEY_RISK_SELECTION, :include_blank => true, :selected => nil %></td>
						</tr>							  						
				 		<tr>
							<td><h4><%= Q5_TEXT %></h4></td>
							<td><%= f.input :q5, label: false, as: :select, :include_blank => true, :selected => nil %></td>
						</tr>							  						
				 		<tr>
							<td><h4><%= Q6_TEXT %></h4></td>
