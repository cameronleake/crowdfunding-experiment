<h1>Round Summary</h1>
<p>&nbsp;</p>
<div class="row">
  <div class="span2">
    <h3>Project Name</h3>
  </div>
  
  <div class="span4">
    <h3>Funding Status</h3>
  </div>
  
  <div class="span6">
    &nbsp;
  </div>
</div>
<p>&nbsp;</p>

<% @current_round.projects.each do |p| %>
	<%= render :partial => 'projects/stats', :locals => { :project => p, :admin => false }%>
<% end %>

<table class="table table-striped table-bordered">
	<thead><tr>
		<td><%= @current_round.projects.order('id ASC').first.name %> Payout</td>
		<td><%= @current_round.projects.order('id ASC').second.name %> Payout</td>
		<td><%= @current_round.projects.order('id ASC').third.name %> Payout</td>
		<td><%= @current_round.projects.order('id ASC').fourth.name %> Payout</td>
		</tr></thead>
	 <tr>
	 	<td><%= @preferences.a_payout %></td>
	 	<td><%= @preferences.b_payout %></td>
	 	<td><%= @preferences.c_payout %></td>
	 	<td><%= @preferences.d_payout %></td>
	 </tr>
</table>

<table class="table">
	<thead><tr>
	<td>stuff</td>
	</tr></thead>
	<% if @current_round.projects[0].funded? %>
		<tr><%= @preferences.a_payout %> + </tr>
	<% else %>
		<tr><%= @contributions.where(:project_id => @current_round.projects[0]).first.amount %> back + </tr>
	<% end %>
	
	<% if @current_round.projects[1].funded? %>
		<tr><%= @preferences.b_payout %> + </tr>
	<% else %>
		<tr><%= @contributions.where(:project_id => @current_round.projects[1]).first.amount %> back + </tr>
	<% end %>
	
	<% if @current_round.projects[2].funded? %>
		<tr><%= @preferences.c_payout %> + </tr>
	<% else %>
		<tr><%= @contributions.where(:project_id => @current_round.projects[2]).first.amount %> back + </tr>
	<% end %>
	
	<% if @current_round.projects[3].funded? %>
		<tr><%= @preferences.d_payout %> + </tr>
	<% else %>
		<tr><%= @contributions.where(:project_id => @current_round.projects[3]).first.amount %> back + </tr>
	<% end %>
	
	<tr><%= @not_donated  %> back</tr>
</table>
<h2>Round Payout: <%= @preferences.round_payout %> credits</h2>

<p>&nbsp;</p>
<p>&nbsp;</p>
<%= link_to "Ready for Next Round", round_waiting_path(@next_round), :class => 'btn-success btn-large' unless last_round?(@current_round) %>
<%= link_to "Experiment Summary", experiment_summary_waiting_path(current_experiment), :class => 'btn-success btn-large' if last_round?(@current_round)%>


