  <div class="span2">
    <h3>Project Name</h3>
  </div>
  
  <div class="span4">
    <h3>Funding Status</h3>
  </div>
  
  <div class="span6">
    &nbsp;
  </div>
</div>
<p>&nbsp;</p>

<% @current_round.projects.each do |p| %>
	<%= render :partial => 'projects/stats', :locals => { :project => p, :admin => false }%>
<% end %>

<table class="table table-striped table-bordered">
	<thead><tr>
		<td>A Payout</td>
		<td>B Payout</td>
		<td>C Payout</td>
		<td>D Payout</td>
		</tr></thead>
	 <tr>
	 	<td><%= @preferences.a_payout %></td>
	 	<td><%= @preferences.b_payout %></td>
	 	<td><%= @preferences.c_payout %></td>
	 	<td><%= @preferences.d_payout %></td>
	 </tr>
</table>


<h2>Round Payout: <%= @preferences.round_payout %> credits</h2>

<p>&nbsp;</p>
<p>&nbsp;</p>
<%= link_to "Ready for Next Round", round_waiting_path(@next_round), :class => 'btn-success btn-large' unless last_round?(@current_round) %>
