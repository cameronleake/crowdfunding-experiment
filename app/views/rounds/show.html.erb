<%= javascript_include_tag "jquery.calculation" %>

<p id="notice"><%= notice %></p>
<%= render @preferences %>
<h2>Credits: 100</h2>
<p>&nbsp;</p>
<%= form_tag "/contributions/submit" do %>

<div class="row">
  <div class="span2">
    <h3>Project Name</h3>
  </div>
  
  <div class="span4">
    <h3>Funding Status</h3>
  </div>
  
  <div class="span1">
    &nbsp;
  </div>
  
  <div class="span5">
    <h3>Contributions</h3>
  </div>
</div>

<div class="row">
  <p><% @current_round.projects.each_with_index do |p,counter| %>
  
  <div class="span2">
    <%= p.name %>
  </div>
  
  <div class="span4">
    <div class="progress">
      <div class="bar" style="width: <%= (p.start_amount.to_f / p.goal_amount) * 100 %>%;"></div>
    </div>
  </div>
  
  <div class="span1">
    <%= p.start_amount %> / <%= p.goal_amount %>
  </div>
  
  <div class="span5">
    <%= number_field_tag "amount_#{counter}", 0 , :in => 0..1000 %><br>
	<%= hidden_field_tag "project_id_#{counter}", p.id %>
  </div>
  
<%end%>
<p>&nbsp;</p>
<div class="row">
  <div class="span2">
    <%= hidden_field_tag "current_round_id", @current_round.id %>
    &nbsp; &nbsp; &nbsp;<%= submit_tag "Submit", :class => 'btn-success btn-large' %>
  </div>  
</div>  
<% end %>
</div>