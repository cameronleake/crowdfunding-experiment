<!DOCTYPE html>
<html>
<head>
  <title>CrowdfundingExperiment</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <% if current_user.nil? %>
        <span class="brand">Crowdfunding Experiment</span>
      <% else %>
        <span class="brand"><% if !@current_round.nil?%>CURRENT ROUND: <%= @current_round.number %><% end %></span> 
      <ul class="nav">
        <li><%= link_to "Instructions", instructions_path unless current_user.name == 'admin' %></li>  
      </ul>
      <ul class="nav secondary-nav pull-right">
        <li class="divider-vertical"></li>
        <li><a href="#">Prefs Type: <%= @preferences.kind_of if @preferences %></a></li>
        <li><a href="#">Current Group: <%= current_group.name unless current_group.nil? %></a></li>
        <li><a href="#">CURRENT USER: <%= current_user.name unless current_user.nil? %></a></li>
        <li><%= link_to "LOG OUT", user_sessions_path, :method => :delete unless current_user.nil?%></li>
      </ul>
      <% end %>
    </div>
  </div>
</div>

<div class="container">

	<% if flash[:alert] %>
	<div id="flash">
		<div class="alert alert-info" ><a class="close" data-dismiss="alert">x</a><%= flash[:alert]%></div>
	</div>
	<% end %>
	<% if flash[:notice] %>
	<div id="flash">
		<div class="alert alert-success"><a class="close" data-dismiss="alert">x</a><%= flash[:notice] %></div>
	</div>
	<% end %>
	<% if flash[:error] %>
	<div id="flash">
		<div class="alert alert-error"><a class="close" data-dismiss="alert">x</a><%= flash[:error] %></div>
	</div>
	<% end %>


<%= yield %>
<br>
</div>
<hr>
<div class="row offset3">
&copy; 2012
<p>&nbsp;</p>
</div>

</body>
</html>
